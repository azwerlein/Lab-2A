<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab2A.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Welcome to the BMI Calculator." />
            
            <Label
                Text="Weight (kg): " />
            <Editor x:Name="Input_Weight" />
            <Label
                Text="Height (Meters)" />
            <Editor x:Name="Input_Height" />
            <Button 
                x:Name="CalculateBtn"
                Text="Calculate"
                Clicked="OnCalculateClicked"/>
            
            <Label 
                x:Name="Output" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
